    <script>
    @if(flashMessage('errors'))
      @each( msg  in flashMessage('errors'))
        $.notify({
          message: '{{msg}}',
        }, {
          allow_dismiss: false,
          type: 'danger',
          placement: {
          from: "bottom",
          align: "left"
        },
          animate: {
            enter: 'animated fadeInDown',
            exit: 'animated fadeOutUp'
          },
        });
      @endeach
    @endif

    @if(flashMessage('success'))
      @each( msg  in flashMessage('success'))
      $.notify({
        message: '{{msg}}',
      }, {
        allow_dismiss: false,
        type: 'success',
        placement: {
        from: "bottom",
        align: "left"
      },
        animate: {
          enter: 'animated fadeInDown',
          exit: 'animated fadeOutUp'
        },
      });
      @endeach
    @endif
    </script>
